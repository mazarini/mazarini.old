# Makefile

validate: composer phpstan phpunit twig yaml container

#################################################################
# composer
#################################################################
composer:
	composer validate --strict

#################################################################
# phpstan
#################################################################
phpstan:
	phpstan

#################################################################
# phpunit
#################################################################
phpunit:
	bin/phpunit

#################################################################
# twig
#################################################################
twig:
	bin/console lint:twig templates lib

#################################################################
# twig
#################################################################
yaml:
	bin/console lint:yaml config phpstan.neon.dist
    
#################################################################
# container
#################################################################
container:
	bin/console lint:container
    